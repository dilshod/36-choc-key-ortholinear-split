
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        // zephyr,console = &uart0;
        zmk,battery = &vbatt;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;

        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,9) RC(0,8) RC(0,7) RC(0,6) RC(0,5)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,5)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5)
                RC(3,2) RC(3,3) RC(3,4)     RC(3,9) RC(3,8) RC(3,7)
        >;
    };

    kscan0: kscan {
      compatible = "zmk,kscan-gpio-matrix";
      diode-direction = "col2row";
      wakeup-source;
      debounce-scan-period-ms = <2>;
    };

    vbatt: vbatt {
      compatible = "zmk,battery-voltage-divider";
      io-channels = <&adc 2>;
      power-gpios = <&gpio0 7 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>;
      output-ohms = <2000000>;
      full-ohms = <(2000000 + 820000)>;
    };
};

&arduino_i2c {
    // Default buffer size is too small for use with displays.
    zephyr,concat-buf-size = <1024>;
};

&gpio_fwd {
    status="disabled";
};

&qspi {
    status="disabled";
};

&uart0{
    status="disabled";
};

&uart1{
    status="disabled";
};
